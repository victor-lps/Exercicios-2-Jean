programa {
  funcao inicio() {
    inteiro n1, n2, x

    escreva ("Escreva um número: ")
    leia (n1)
    escreva ("Escreva outro número: ")
    leia (n2)

    se (n1 % 2 == 0 e n2 % 2 == 0)
    x = 2 

    senao se (n1 % 2 == 0 ou n2 % 2 == 0)
    x = 1

    senao se (n1 % 2 != 0 e n2 % 2 != 0)
    x = 0

    escreva (" São pares: ",x)







  }
}
